<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6D9E3"
    tools:context=".MainActivity">

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#098A7E"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"
        android:text="Flight Ticket Booking" />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#098A7E"
        android:hint=" Personal Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/i_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_person"
        android:hint="Name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/i_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_email"
        android:hint="Email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/i_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"

        android:hint="Phone"
        app:helperText="Required"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:endIconMode="custom"
        app:helperTextTextColor="#D13D0F"
        app:startIconDrawable="@drawable/ic_call"
        app:prefixText="+00"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_contact"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/i_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_location"
        android:hint="Address">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/et_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#098A7E"
        android:hint=" Gender"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"/>


    <CheckBox
        android:id="@+id/female"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="#129C8F"
        android:text="Female" />

    <CheckBox
        android:id="@+id/male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:checked="false"
        android:textColor="#129C8F"
        android:text="Male" />


    <TextView
        android:id="@+id/et_pregnant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#098A7E"
        android:hint=" Are you Pregnant?(For Female)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"/>


    <RadioGroup
        android:id="@+id/radiosim"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioRobi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/radiGp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="No" />

    </RadioGroup>

    <TextView
        android:id="@+id/et_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#098A7E"
        android:hint=" Need a doctor?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="   Yes" />

    <Switch
        android:id="@+id/switch2"
        android:layout_marginStart="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   No" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/i_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        app:endIconMode="clear_text"

        android:hint="Choose Date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/tx_00"
        android:layout_width="130dp"
        android:layout_height="30dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text=" Destination"
        android:textSize="20dp"
        android:textColor="#000B15" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"

        tools:layout_editor_absoluteX="39dp"

        tools:layout_editor_absoluteY="198dp" />


    <TextView
        android:id="@+id/tx_1"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:text="Choose a seat"
        android:textSize="20dp"
        android:textColor="#000B15"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        tools:layout_editor_absoluteX="36dp"

        tools:layout_editor_absoluteY="308dp" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/feadback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Please Give Feadback">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textfeadback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/et_rat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#098A7E"
        android:hint=" Rate Our Website"
        android:textSize="18sp"
        android:textStyle="bold"
        android:inputType="text"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:stepSize="0.5" />
   <!-- <EditText
        android:id="@+id/et_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:inputType="text"
        />-->


    <Button
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:id="@+id/b_name"
        android:layout_width="200dp"
        android:text="Save"

        android:backgroundTint="#009688"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        />







</LinearLayout>

</ScrollView>